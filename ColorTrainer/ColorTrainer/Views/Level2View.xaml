<UserControl x:Class="ColorTrainer.Views.Level2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ColorTrainer.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель без изменений -->
        <Grid Grid.Row="0" Height="50" VerticalAlignment="Center">
            <TextBlock Text="Найди все лишние оттенки" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextColor}"/>
            <Button x:Name="BackButton" Margin="15,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource IconButton}" Click="BackButton_Click">
                <Viewbox Height="15" Width="15">
                    <Path Data="M10,0 L0,10 L10,20" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="3"/>
                </Viewbox>
            </Button>
        </Grid>

        <!-- Игровая сетка -->
        <ItemsControl x:Name="ColorGridItemsControl" Grid.Row="1" Margin="20">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- ИСПОЛЬЗУЕМ ToggleButton ВМЕСТО Button -->
                    <ToggleButton Margin="5" Background="{Binding}" Tag="{Binding}" Cursor="Hand">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" 
                                        BorderThickness="2" BorderBrush="Transparent">
                                </Border>
                                <!-- Триггер для отображения "выбранного" состояния -->
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="border" Property="BorderBrush" Value="Gold"/>
                                        <Setter TargetName="border" Property="BorderThickness" Value="4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Строка состояния с кнопкой "Проверить" -->
        <StackPanel Grid.Row="2" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="CheckButton" 
                    Content="Проверить" 
                    Style="{StaticResource MenuButton}" 
                    Width="200" Height="50"
                    Click="CheckButton_Click"/>

            <Grid Grid.Row="3" Margin="15,10,15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Для кнопки рекорда -->
                    <ColumnDefinition Width="*"/>
                    <!-- Пустое пространство -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Для счета -->
                </Grid.ColumnDefinitions>

                <!-- Кнопка рекорда в левой колонке -->
                <Button x:Name="HighScoreButton" 
            Grid.Column="0"
            Content="🏆" 
            Style="{StaticResource IconButton}"
            Click="HighScoreButton_Click"/>

                <!-- Счет в правой колонке -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Счет: " FontSize="18" FontWeight="Medium" Foreground="{DynamicResource PrimaryTextColor}"/>
                    <TextBlock x:Name="ScoreText" Text="0" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>