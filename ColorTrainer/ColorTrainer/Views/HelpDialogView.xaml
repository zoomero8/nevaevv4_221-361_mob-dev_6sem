<UserControl x:Class="ColorTrainer.Views.HelpDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350"
             MaxWidth="360" MaxHeight="600">
    <!-- ЗАДАЕМ МАКСИМАЛЬНЫЕ РАЗМЕРЫ -->
    <Border Padding="20" Background="{DynamicResource SecondaryBackgroundColor}" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Картинка -->
                <RowDefinition Height="*"/>
                <!-- Сообщение -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопка -->
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleText" Grid.Row="0" Text="Заголовок" 
                       FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Картинка-подсказка -->
            <Image x:Name="HelpImage" Grid.Row="1" Height="180" Stretch="Uniform" Margin="0,0,0,15"/>
            <!-- Добавили обработчик события -->

            <TextBlock x:Name="MessageText" Grid.Row="2" Text="Текст сообщения здесь..." 
                       FontSize="16" Foreground="{DynamicResource PrimaryTextColor}" 
                       TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" 
                       Margin="0,0,0,15"/>

            <Button x:Name="OkButton" Grid.Row="3" Content="Понятно" 
                    Style="{StaticResource MenuButton}" HorizontalAlignment="Center" 
                    Width="120" Height="40"/>
        </Grid>
    </Border>
</UserControl>