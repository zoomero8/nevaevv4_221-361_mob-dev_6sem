<!-- Themes/LightTheme.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета фона -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="White"/>
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#F0F0F0"/>

    <!-- Цвета текста -->
    <SolidColorBrush x:Key="PrimaryTextColor" Color="Black"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="Gray"/>

    <!-- Цвета кнопок -->
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#FF7A95FD"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="Black"/>
    <SolidColorBrush x:Key="ButtonBorderColor" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundColor" Color="#FF4269FF"/>

</ResourceDictionary>