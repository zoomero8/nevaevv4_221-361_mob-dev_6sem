<!-- Themes/DarkTheme.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета фона -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#2D2D30"/>
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#3F3F46"/>

    <!-- Цвета текста -->
    <SolidColorBrush x:Key="PrimaryTextColor" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="LightGray"/>

    <!-- Цвета кнопок -->
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#555555"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="ButtonBorderColor" Color="#6a6a6a"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundColor" Color="#4A4A4A"/>

</ResourceDictionary>