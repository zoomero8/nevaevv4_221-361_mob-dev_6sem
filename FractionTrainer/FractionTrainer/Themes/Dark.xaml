<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BackgroundColor">#FF2D2D30</Color>
    <Color x:Key="SecondaryBackgroundColor">#FF3F3F41</Color>
    <Color x:Key="TitleTextColor">#FFDDDDDD</Color>
    <Color x:Key="ButtonAccentColor">#FF0A84FF</Color>
    <Color x:Key="ButtonTextColor">#FFFFFFFF</Color>
    <Color x:Key="ButtonAccentHoverColor">#FF0A60FF</Color>
    <Color x:Key="IconColor">#FFCCCCCC</Color>
    <Color x:Key="IconHoverBackgroundColor">#33FFFFFF</Color>
    <Color x:Key="BorderColor">#FF555555</Color>
    <Color x:Key="OptionCardBorderColor">#FF555555</Color>
    <Color x:Key="OptionCardCheckedBackgroundColor">#FF35495E</Color>
    <Color x:Key="HeartColor">DeepPink</Color>
    <Color x:Key="SuccessColor">#FF34C759</Color>
    <Color x:Key="ErrorColor">#FFFF453A</Color>
    <Color x:Key="SecondaryTextColor">LightGray</Color>

    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="TitleTextBrush" Color="{StaticResource TitleTextColor}"/>
    <SolidColorBrush x:Key="ButtonAccentBrush" Color="{StaticResource ButtonAccentColor}"/>
    <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource ButtonTextColor}"/>
    <SolidColorBrush x:Key="ButtonAccentHoverBrush" Color="{StaticResource ButtonAccentHoverColor}"/>
    <SolidColorBrush x:Key="IconBrush" Color="{StaticResource IconColor}"/>
    <SolidColorBrush x:Key="IconHoverBackgroundBrush" Color="{StaticResource IconHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HeartBrush" Color="{StaticResource HeartColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>

    <SolidColorBrush x:Key="OptionCardBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="OptionCardBorderBrush" Color="{StaticResource OptionCardBorderColor}"/>
    <SolidColorBrush x:Key="OptionCardHoverBorderBrush" Color="{StaticResource ButtonAccentColor}"/>
    <SolidColorBrush x:Key="OptionCardCheckedBackgroundBrush" Color="{StaticResource OptionCardCheckedBackgroundColor}"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#40FF453A" />

    <SolidColorBrush x:Key="PairSelectedBackgroundBrush" Color="#FF35495E"/>
    <SolidColorBrush x:Key="PairSelectedBorderBrush" Color="{StaticResource ButtonAccentColor}"/>
    <SolidColorBrush x:Key="SingleSelectedBackgroundBrush" Color="#FF4A4A4A"/>
    <SolidColorBrush x:Key="SingleSelectedBorderBrush" Color="LightGray"/>

    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#FF2D4B32"/>
    <SolidColorBrush x:Key="SuccessAccentBrush" Color="#FF34C759"/>
</ResourceDictionary>